{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "zh_CN",
  "version": "0.2",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://*.cnbeta.com/*", "*://*.cnbeta.com.tw/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "enabled": true,
        "id": "cnbeta-dot-com",
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.cnbeta.com.tw/*"],
      "css": ["hide-ads.css"]
    }
  ]
}
